<h1>ブログ一覧</h1>

<p><%= notice %></p>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>

<% @newblogs.each do |newblog| %>
  <tr>
    <td><%= newblog.title %></td>
    <td><%= newblog.content %></td>

    <td><%= link_to '詳細を確認する', newblog_path(newblog.id) %>
    <td><%= link_to 'ブログを編集する', edit_newblog_path(newblog.id), data: { confirm: '本当に編集していいですか？' } %></td>
    <td><%= link_to 'ブログを削除する', newblog_path(newblog.id), method: :delete, data: { confirm: '本当に削除していいですか？' } %></td>
  </tr>
<% end %>


</table>

<%= link_to '新しくブログを投稿する' , new_newblog_path %>
